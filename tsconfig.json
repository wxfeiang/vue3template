{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    
  },
  "include": [
      "src/*",
      "src/**/*.vue",
      "src/**/*.d.ts",
      "src/**/*.jsx",
      "src/**/*.t/s",
      "src/**/*.js",
      "types/**/*.d.ts", // 项目内
      "core/**/*.d.ts",
      "vite.config.ts"
    ],
  "exclude": ["dist", "**/*.js", "node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
