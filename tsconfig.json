{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
      "src/*",
      "src/**/*.vue",
      "src/**/*.d.ts",
      "src/**/*.jsx",
      "src/**/*.t/s",
      "src/**/*.js",
      "./core/auto-import.ts",
      "./vite.config.ts",
      "*.ts"
    ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
